<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form handling</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>

</head>
<body>

    <div class="w-full min-h-full bg-zinc-900 p-10 text-white">
        <div>
            <a href="/" class="text-blue-700">Go to home -> </a>
        </div>
        <div class="text-2xl mb-3 mt-10">All Users</div>
        <div class="users flex gap-3 flex-wrap">
            <% if(users.length ==0) { %>
                <div class="text-zinc-500 mt-10">No users yet.</div>
            <% } else { %>
            <% users.forEach((user) => { %>
                <div class="user w-60 bg-zinc-800 p-4 rounded-lg">
                    <div class="img w-full h-42 bg-zinc-500 overflow-hidden">
                        <img class="w-full h-full object-cover object-top" src="<%= user.image %>" alt="img">
                    </div>
                    <h2 class="name p-1"><%= user.name %></h2>
                    <h4 class="email text-zinc-500 p-1"><%= user.email %></h4>
                    <div class="flex justify-between mt-3">
                        <a href="" class="text-zinc-600 cursor-pointer">Edit User</a>
                        <a href="/delete/<%= user._id %>" class="text-red-700 cursor-pointer">Delete User</a>
                    </div>
                </div>    
            <% }) %>
            <% } %>
        </div>
    </div>
</body>
</html>